    function verifyPassword() { 
          var password = document.getElementById('exampleInputPassword1').value;  
          const decimal= /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,15}$/g;
          if(password.match(decimal)){
              return true;
          }
