<script>

    // aplws exoume orisei thn sunartisei, alla den trexei..
    async function bringMeDataFromServer() {
        const serverResponse = await axios.get('/admindata')
        console.log(serverResponse.data);
        const sunolikaKrousmata = serverResponse.data.sunolikaKrousmata;
        const plithosEpiskepseon = serverResponse.data.plithosEpiskepseon;




        const ctx = document.getElementById('myChart').getContext('2d');
        const labels = ['# κρουσματων', '# επισκεψεων', '# testds'];

        const data = {
            labels: labels,
            datasets: [{
                label: 'My First Dataset',
                data: [sunolikaKrousmata, plithosEpiskepseon],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.7)',
                    'rgba(255, 159, 64, 0.7)',
                    'rgba(255, 205, 86, 0.7)',
                    'rgba(75, 192, 192, 0.7)',
                    'rgba(54, 162, 235, 0.7)',
                    'rgba(153, 102, 255, 0.7)',
                    'rgba(201, 203, 207, 0.7)'
                ],
                borderColor: [
                    'rgb(255, 99, 132)',
                    'rgb(255, 159, 64)',
                    'rgb(255, 205, 86)',
                    'rgb(75, 192, 192)',
                    'rgb(54, 162, 235)',
                    'rgb(153, 102, 255)',
                    'rgb(201, 203, 207)'
                ],
                borderWidth: 1
            }]
        };
        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            },
        };

        const myChart = new Chart(ctx, config)

    }

    bringMeDataFromServer();
</script>



